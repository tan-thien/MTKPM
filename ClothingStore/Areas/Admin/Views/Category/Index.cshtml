@model IEnumerable<ClothingStore.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h2>Category List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Category</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>IdCate</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.IdCate</td>
                <td>@category.CateName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.IdCate" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.IdCate" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
